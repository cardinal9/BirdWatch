<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cardview_compat_inset_shadow"
        android:elevation="3dp"
        android:padding="@dimen/cardview_default_radius"
        style="@style/CardView">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <ImageView
            android:id="@+id/birdPicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/white_and_brown_bird_151511"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/birdNameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_of_bird"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rarityId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rarity"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notesId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notes"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timestampId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timestamp"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>